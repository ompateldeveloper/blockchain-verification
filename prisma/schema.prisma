// database for employee info on blockchain 

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUsers {
  id String @id @default(cuid())

  email      String   @unique
  username   String?  @unique
  fname      String?
  lname      String?
  password   String
  privateKey String?
  company    Company? @relation(fields: [companyId], references: [id])
  companyId  String?  @unique

  empData   EmpData[]
  templates Templates[]
}

model Company {
  id      String      @id @default(cuid())
  name    String?
  address String?
  phone   String?
  email   String?
  website String?
  logo    String?
  sign    String?
  admin   AdminUsers?
}

model Templates {
  id String @id @default(cuid())

  name String @unique

  title String?

  content1 String?
  content2 String?
  date     String?
  cid      String?
  footer   String?

  admin   AdminUsers @relation(fields: [adminId], references: [id])
  adminId String     @unique
}

model EmpData {
  id String @id @default(cuid())

  empId       String    @unique
  empHash     String?   @unique
  tx          String?   @unique
  fname       String
  mname       String?
  lname       String
  email       String?
  startDate   DateTime
  endDate     DateTime?
  pfNumber    String?
  phone       String?
  department  String?
  designation String?
  salary      Int?

  admin   AdminUsers @relation(fields: [adminId], references: [id])
  adminId String
}
